
public class IntList {
	
	private int[] data; 
	private int elementCount;
	
	public IntList(){
		elementCount = 0;
		setData(new int[4]);
	}
	
	public void add(int value){
		
		if (elementCount >= data.length){
			doubleArrayCapacity();
		}
		
		data[elementCount] = value;
		elementCount ++;
	}
	
	public int get(int index){
		return data[index];
	}
	
	public int size(){
		return elementCount;
	}

	public void getData() {
		return data[index];
	}

	public void setData(int[] data) {
		this.data = data;
	}
}
