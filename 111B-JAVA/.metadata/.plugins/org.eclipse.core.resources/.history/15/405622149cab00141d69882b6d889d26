	public static boolean shouldPlayAgain(){
		Scanner input = new Scanner(System.in); 
		
		System.out.print("Play again? (y/n) ");
        char playAgain = input.next().charAt(0);
        if (playAgain == 'y'){
        	return true;
        }else if (playAgain == 'n'){
        	return false;
        }else{
        	System.out.println("Type 'y' for yes and 'n' for no");
        }
		
